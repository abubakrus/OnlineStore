<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="155dp"
    android:layout_height="255dp"
    android:layout_marginHorizontal="8dp"
    android:layout_marginTop="5dp"
    android:backgroundTint="?attr/theme_search_view_style"
    android:elevation="4dp"
    app:cardCornerRadius="30dp">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/image_view_top_product"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:scaleType="centerCrop"
        app:shapeAppearanceOverlay="@style/CornerRadius20Percent"
        tools:src="@tools:sample/avatars" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="175dp"
        android:orientation="vertical"
        android:paddingStart="12dp">

        <TextView
            android:id="@+id/title_top_product_text"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins"
            android:singleLine="true"
            android:textColor="?attr/textColor"
            android:textSize="12sp"
            android:textStyle="bold"
            tools:text="@tools:sample/lorem" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins"
                android:text="Ñ."
                android:textColor="?attr/textColor"
                android:textSize="18dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/prise_product"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins"
                android:singleLine="true"
                android:textColor="?attr/textColor"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:text="@tools:sample/lorem" />
        </LinearLayout>
    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/like_button"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_gravity="end"
        android:layout_marginTop="180dp"
        android:layout_marginEnd="6dp"
        app:cardElevation="0dp"
        app:cardBackgroundColor="@android:color/transparent">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="?attr/like_icon" />
    </androidx.cardview.widget.CardView>

</com.google.android.material.card.MaterialCardView>